{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [      
            "dom",
            "es2016",
            "esnext.asynciterable"
        ],
        "baseUrl": "../src",
        "paths": {
            "@async/*": [ "async/*" ],
            "@parallel/*": [ "parallel/*" ],
            "@shared/*": [ "shared/*" ],
            "@sync/*": [ "sync/*" ],
        },
    },
    "files": [
        "./LinqTests.ts"
    ],
}