{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib",
        "strict": true,
        "strictFunctionTypes": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2016",
            "esnext.asynciterable"
        ],
        "baseUrl": "src",
        "paths": {
            "@async/*": [ "async/*" ],
            "@parallel/*": [ "parallel/*" ],
            "@shared/*": [ "shared/*" ],
            "@sync/*": [ "sync/*" ],
        },
    },
    "exclude": [
        "node_modules",
        ".npm",
        "test",
        "lib"
    ]
}