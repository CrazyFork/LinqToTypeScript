{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./lib",
        "strict": true,
        "strictFunctionTypes": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2016",
            "esnext.asynciterable"
        ],
    },
    "exclude": [
        "node_modules",
        ".npm",
        "test",
        "lib"
    ]
}