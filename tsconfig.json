{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./lib",
        "declaration": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        ".npm",
        "test",
        "lib"
    ]
}